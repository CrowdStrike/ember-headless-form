{{#let (unique-id) as |uuid|}}
  {{yield
    (hash
      label=(component (ensure-safe-component this.LabelComponent) fieldId=uuid)
      input=(component
        (ensure-safe-component this.RadioInputComponent)
        name=@name
        fieldId=uuid
        value=@value
        checked=this.isChecked
        setValue=@setValue
      )
    )
  }}
{{/let}}