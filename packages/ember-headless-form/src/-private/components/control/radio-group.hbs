{{#let (unique-id) as |labelId|}}
  <div
    role='radiogroup'
    aria-labelledby={{labelId}}
    aria-invalid={{if @invalid 'true'}}
    aria-describedby={{if @invalid @errorId}}
    ...attributes
  >
    {{yield
      (hash
        Radio=(component
          (ensure-safe-component this.RadioComponent)
          name=@name
          selected=@selected
          setValue=@setValue
        )
        Label=(component (ensure-safe-component this.LabelComponent) id=labelId)
      )
    }}
  </div>
{{/let}}