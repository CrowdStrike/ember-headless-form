{{#let (unique-id) as |uuid|}}
  {{yield
    (hash
      label=(component (ensure-safe-component this.LabelComponent) fieldId=uuid)
      input=(component
        (ensure-safe-component this.InputComponent)
        fieldId=uuid
        value=this.valueAsString
        setValue=(fn @set @name)
      )
      value=this.value
    )
  }}
{{/let}}